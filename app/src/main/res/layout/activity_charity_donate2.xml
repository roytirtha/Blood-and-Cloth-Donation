<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ioy"
    tools:context=".CharityDonate2">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="224dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="14dp"
        android:text="Donation Form"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="372dp"
        android:layout_height="40dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="106dp"


        android:ems="10"
        android:background="@drawable/bjp"
        android:hint="Enter Your Name"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editContactNo"
        android:layout_width="match_parent"
        android:layout_height="40dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="205dp"
        android:background="@drawable/bjp"
        android:ems="10"
        android:hint="Enter Your Contact No"

        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editDonationAmount"
        android:layout_width="match_parent"
        android:layout_height="40dp"


        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="209dp"
        android:background="@drawable/bjp"
        android:ems="10"
        android:hint="Donation Amount"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editClothType"
        android:layout_width="match_parent"
        android:layout_height="40dp"


        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="112dp"
        android:background="@drawable/bjp"

        android:ems="10"
        android:hint="Clothe Type"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


    <Button
        android:id="@+id/btn_Done"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/button_background"
        android:text="Done"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_Back"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignTop="@+id/btn_Done"
        android:layout_marginEnd="14dp"
        android:background="@drawable/button_background"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</RelativeLayout>